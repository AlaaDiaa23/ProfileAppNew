@model About
@{
    ViewData["Title"] = "Edit";
}



<body class="hold-transition sidebar-mini">
<div class="wrapper">


 
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>General Form</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">General Form</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div  class="col-md-10">
           
            <!-- Horizontal Form -->
            <div class="card card-info">
              <div class="card-header">
                <h3 class="card-title">Edit Form</h3>
              </div>

             <div>
              <img  src="@string.Format("/Uploads/{0}",Model.Image)"width="300" height="150" />
              
</div>
           
              <!-- /.card-header -->
              <!-- form start -->
              <form class="form-horizontal" method="post" asp-action="Edit" asp-controller="About" enctype="multipart/form-data">
                <div class="card-body">
                        <div class="form-group row">
                    <div class="col-sm-10">
                      <input asp-for="Id" type="hidden" class="form-control"   >

                    </div>
                  </div>
                 <div class="form-group row">
                    <label asp-for="Name" class="col-sm-2 control-label">Name</label>
                    <div class="col-sm-10">
                      <input asp-for="Name" type="text" class="form-control"  placeholder="Name..." >
                     <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                  </div>
                  <div class="form-group row">
                    <label asp-for="Email" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                      <input asp-for="Email" type="email" class="form-control"  placeholder="Email...">
                    <span asp-validation-for="Email" class="text-danger"></span>
                  </div>
                  </div>
                   <div class="form-group row">
                    <label asp-for="Phone" class="col-sm-2 control-label">Phone</label>
                    <div class="col-sm-10">
                      <input asp-for="Phone" type="number" class="form-control"  placeholder="Phone...">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                  </div>
                  </div>
                  <div class="form-group row">
                    <label asp-for="DateOfBirth" class="col-sm-2 control-label">Birth</label>
                    <div class="col-sm-10">
                      <input asp-for="DateOfBirth" type="date" class="form-control" placeholder="DateOfBirth..." >
                      <span asp-validation-for="DateOfBirth" class="text-danger"></span>

                  </div>
                
                   <div class="form-group row">
                    <label asp-for="Nationality" class="col-sm-5 control-label">Nationality</label>
                    <div class="col-sm-12">
                      <input asp-for="Nationality" type="text" class="form-control" placeholder="Nationality..." >
                      <span asp-validation-for="Nationality" class="text-danger"></span>

                  </div>
                  </div>
                      <div class="form-group row">
                    <label asp-for="Address" class="col-sm-5 control-label">Address</label>
                    <div class="col-sm-12">
                      <input asp-for="Address" type="text" class="form-control" placeholder="Address..." >
                      <span asp-validation-for="Address" class="text-danger"></span>

                  </div>
                  </div>    
                  <div class="form-group row">
                    <label asp-for="Description" class="col-sm-5 control-label">Description</label>
                    <div class="col-sm-12">
                      <input asp-for="Description" type="text" class="form-control" placeholder="Description..." >
                      <span asp-validation-for="Description" class="text-danger"></span>

                  </div>
                  </div>
                      <div class="form-group row">
                    <label asp-for="Work" class="col-sm-5 control-label">Work</label>
                    <div class="col-sm-12">
                      <input asp-for="Work" type="text" class="form-control" placeholder="Work..." >
                      <span asp-validation-for="Work" class="text-danger"></span>

                  </div>
                  </div>
                  <div class="form-group row">
                    <label asp-for="Image" class="col-sm-2 control-label">Image</label>
                    <div class="col-sm-10">
                      <input type="file" class="form-control " name="Files">

                  </div>
                  </div>
                
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" asp-controller="About" class="btn btn-default float-right">Cancel</a>
                </div>
                <!-- /.card-footer -->
              
  </div></form>
            </div>
          
            <!-- /.card -->

          </div>
          <!--/.col (left) -->
          
               
                
                
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!--/.col (right) -->
        </div>
  <!-- /.content-wrapper -->



<!-- ./wrapper -->

<!-- jQuery -->
@section Scripts{
<script src="~/Admin/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/Admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="~/Admin/dist/js/adminlte.min.js"></script>
<!-- AdminLTE for demo purposes -->
<script src="~/Admin/dist/js/demo.js"></script>
}

</body>


